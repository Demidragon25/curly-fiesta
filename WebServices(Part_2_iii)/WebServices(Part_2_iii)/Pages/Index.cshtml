@page
@model WebServices_Part_2_iii.Pages.IndexModel


<!DOCTYPE html>
<html>
<head>
    <title>Session Values</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">CurlyFiesta</a>
        </div>
    </nav>

    <h1>Welcome, @Model.Name!</h1>

    <div id="adContainer">
        <img id="adImage" src="/Ads/Ad1.jpg" alt="Ad Image" width="150" />
    </div>

    <form method="post">
        <div class="form-group">
            <label for="name">Enter your name:</label>
            <input type="text" class="form-control" id="name" name="name" value="@Model.Name" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    @section Scripts {
        <script>
            window.onload = function () {
                rotateAd();
            };

            function rotateAd() {
                var adContainer = document.getElementById("adContainer");
                var adImage = document.getElementById("adImage");
                var adIndex = 1; // Start with the second ad image

                setInterval(function () {
                    adIndex = (adIndex % 3) + 1; // Replace '3' with the number of ad images you have

                    adImage.src = "/Ads/Ad" + adIndex + ".jpg";
                }, 3000); // Change the ad every 3 seconds (adjust as needed)
            }
        </script>
    }


    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                Session Dictionary Values
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Key</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Time</td>
                            <td>@HttpContext.Session.GetString("Time")</td>
                        </tr>
                        <tr>
                            <td>User Agent</td>
                            <td>@HttpContext.Session.GetString("UserAgent")</td>
                        </tr>
                        <tr>
                            <td>Remote IP</td>
                            <td>@HttpContext.Session.GetString("RemoteIP")</td>
                        </tr>
                        <tr>
                            <td>Project Name</td>
                            <td>@HttpContext.Session.GetString("ProjectName")</td>
                        </tr>
                        <tr>
                            <td>Lambda Test</td>
                            <td>@HttpContext.Session.GetString("LambdaTest")</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
